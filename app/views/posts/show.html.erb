<p style="color: green"><%= notice %></p>

  <%= render @post %>
 
  
  

    <% @comments.each do |comment|%>
      <div class= "card">
        <div class="card-body">
          <h5 class="card-title">
          <%= comment.author%>
          </h5>
          <p class="card-text">
          <%= comment.body%>
          </p>
          <%= button_to "Destroy this comment", post_comment_path(@post,comment), method: :delete ,data: {confirm: "Are you sure?"}%>
          <%= link_to "Edit this comment", edit_post_comment_path(@post,comment)%>
        </div>
      </div>
        
      <% end %>
 

  <div>
    <%= link_to "Edit this post", edit_post_path(@post) %> |
    <%= link_to "Back to posts", posts_path %>

    <%= button_to "Destroy this post", @post, method: :delete %>

 <%= render "comments/form", post: @post, comment: @post.comments.new %>
</div>
