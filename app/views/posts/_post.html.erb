<div calss="card">
<div class="card-body">
  <h3 class="card-title">
    <strong>
    <%= post.title %>
    </strong>
  </h3>
  <%if post.category.present?%>
    <%=link_to post.category.name, posts_path(category_id: post.category.id )%>
  <% end %>

  <p class="card-text">
    <%= post.body %>
  </p>
</div>
</div>
