<%= form_with(model: [post, comment], local: true) do |form| %>
    <div class="field">
        <%= form.label :author %>
        <%= form.text_field :author %>
    </div>

    <div class="field">
        <%= form.label :body %>
        <%= form.text_field :body %>
    </div>

    <div class="actions">
        <%= form.submit %>
    </div>


<% end %>